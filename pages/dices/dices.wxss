/* 底部弹窗出现背景 */
.dialog_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
  display: none;
}
/* 底部弹窗颜色 */
.dialog_container {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #f6f6f6;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}
.dialog_show .dialog_container {
  transform: translateY(0);
}
.dialog_show .dialog_mask {
  display: block;
}



.dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
  display: none;
}
.dialog__container {
